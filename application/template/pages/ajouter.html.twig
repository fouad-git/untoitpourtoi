<div class="container">
    <div class="row">
        <div class="col-12">
            <form action="ajouter" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                <h2 class="text-center">Formulaire personne seule</h2>
                <div class=" progress mb-5">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width: 33%">

                    </div>
                </div>
